<!-- edit_text_bg_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <size
                android:width="4dp"
                android:height="56dp" />

            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/green" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <size
                android:width="4dp"
                android:height="56dp" />

            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>
