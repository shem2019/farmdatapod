<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FarmDataPod" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/CustomTextInputShape</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- font family -->
        <item name="android:fontFamily">@font/roboto</item>
        <!-- Set the background of all layouts to white or any desired color -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.FarmDataPod" parent="Base.Theme.FarmDataPod" />
</resources>